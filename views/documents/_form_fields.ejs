<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= document.title %>"> 
</div>
<div>
    <label>Creator</label>
    <select name="creator">
    <% creators.forEach(creator => { %>
    <% if (creator.id === document.creator) { %>
        <option selected label="<%= creator.name %>" value="<%= creator.id %>">
    <% } else { %>
        <option label="<%= creator.name %>" value="<%= creator.id %>">
    <% } %>
    <% }) %>
    </select>
</div>
<div>
    <label>Creation Date</label>
    <input type="date" name="creationDate" 
    value="<%= document.creationDate == null ? '' :
    document.creationDate.toISOString().split('T')[0] %>"> 
</div>
<div>
    <label>Page Count</label>
    <input type="number" name="pageCount" min="1" value="<%= document.pageCount %>"> 
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover" > 
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%= document.description %></textarea> 
</div>
